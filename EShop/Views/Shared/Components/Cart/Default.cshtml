@model IEnumerable<Product>

<form class="form-inline my-2 my-lg-0">
    <button data-toggle="modal" data-target="#cartModal" class="btn btn-outline-success my-2 my-sm-0" type="button">Cart: @ViewBag.Count</button>

</form>


<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cart</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <img height="100px" width="100px" src="@item.ImageUrl" alt="Alternate Text" />
                        @item.Title
                        <span class="badge badge-primary badge-pill">@ViewBag.ProductCount[item.Id]</span>
                        <a asp-controller="Home" asp-action="DeleteInCart" asp-route-id="@item.Id" class="btn btn-danger">DELETE</a>

                    </li>
                    }
                </ul>
                <p><b>TOTAL:</b> @ViewBag.Total</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-primary">Buy</a>
            </div>
        </div>
    </div>
</div>