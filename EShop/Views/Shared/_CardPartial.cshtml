@model IndexModel



@foreach (var item in Model.Products)
{
    <div class="col-lg-4 col-md-6 mb-4">

        <div class="card">
            @if (item.IsNew2)
            {
                <p style="color:blue">NEW</p>
            }

            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: contain">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p style="color:red" class="card-text">@item.Price $</p>
                <a asp-controller="Home" asp-action="AddToCard" asp-route-id="@item.Id" class="btn btn-primary">Add to card</a>
            </div>
        </div>
    </div>
}